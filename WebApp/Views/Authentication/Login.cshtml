@model Domain.Dto.Authentication.LoginDto
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-3 card p-3">
        <h2 class="text-center text-info">Inicio de Sesi√≥n</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="mb-1">
                <label asp-for="Username"></label>
                <input type="text" asp-for="Username" id="Username" class="form-control">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" id="">
                <span asp-validation-for="Password"></span>
            </div>
            <div class="mb-1 form-check">
                <label asp-for="RememberMe">
                    <input type="checkbox" asp-for="RememberMe" class="form-check-input" id="">@@Html.DisplayFor(m => m.RememberMe)
                </label>
            </div>
        </form>
    </div>
</div>